<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"

    tools:context=".Design2Activity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="@dimen/_10sdp"
                android:background="#3C393939"
                android:orientation="vertical"


                >

                <TextView
                    android:id="@+id/txtName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:hint="Tushar Mevada"
                    android:fontFamily="@font/abril_fatface"
                    android:gravity="center_horizontal"
                    android:textColor="#E8000000"
                    android:textColorHint="#E8000000"
                    android:textSize="40dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:layout_marginHorizontal="10dp">

                <TextView
                    android:id="@+id/txtJobName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#3C393939"
                    android:fontFamily="sans-serif-condensed"
                    android:hint="Android Devoper"
                    android:gravity="center|top"
                    android:textColor="#E8000000"
                    android:textColorHint="#E8000000"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:background="#3C393939">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:orientation="horizontal">


                        <LinearLayout
                            android:layout_width="@dimen/_135sdp"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginVertical="5dp"
                            android:orientation="vertical">


                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_gravity="center"
                                android:layout_marginHorizontal="10dp"
                                android:src="@drawable/mail" />

                            <TextView
                                android:id="@+id/txtMail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"

                                android:fontFamily="sans-serif-condensed"
                                android:hint="tushar.mevada15@gmail.com"

                                android:textColor="#000000"
                                android:textColorHint="#000000"
                                android:textSize="15dp" />


                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="@dimen/_135sdp"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginVertical="5dp"
                            android:gravity="right"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_gravity="center"
                                android:layout_marginHorizontal="10dp"
                                android:src="@drawable/phone" />

                            <TextView

                                android:id="@+id/txtNumber"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="sans-serif-condensed"
                                android:hint="9909025555"
                                android:textColor="#000000"
                                android:textColorHint="#000000"
                                android:textSize="15dp" />


                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#3C393939"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginVertical="5dp"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginTop="5dp"
                            android:src="@drawable/loc" />

                        <TextView
                            android:id="@+id/txtAddress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="sans-serif-condensed"
                            android:hint="India"
                            android:textColor="#000000"
                            android:textColorHint="#000000"
                            android:textSize="15dp" />


                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical">


                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="5dp"
                    android:background="#E8000000" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="5dp"
                android:background="#3C393939"
                android:orientation="vertical">


                <TextView

                    android:layout_width="295dp"
                    android:layout_height="39dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"


                    android:clickable="true"
                    android:focusable="true"
                    android:fontFamily="@font/krona_one"
                    android:gravity="center"
                    android:hint="WORK EXPERIENCE"
                    android:textColor="#E8000000"
                    android:textColorHint="#E8000000"
                    android:textSize="@dimen/_15sdp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="5dp">

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_gravity="top|center"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/dot" />

                    <TextView
                        android:id="@+id/txtExperience"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:fontFamily="sans-serif-condensed"
                        android:gravity="left"
                        android:hint=" "
                        android:textColor="#000000"
                        android:textColorHint="#000000"
                        android:textSize="15dp" />


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="5dp"
                    android:background="#E8000000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp">


                <LinearLayout

                    android:layout_width="@dimen/_140sdp"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:layout_marginTop="10dp"
                    android:background="#3C393939"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/txtEducation"
                        android:layout_width="130dp"
                        android:layout_height="31dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"

                        android:clickable="true"
                        android:focusable="true"
                        android:fontFamily="@font/krona_one"
                        android:gravity="center"
                        android:hint="EDUCATION"
                        android:textColor="#E8000000"
                        android:textColorHint="#E8000000"
                        android:textSize="@dimen/_10sdp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginVertical="5dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:fontFamily="sans-serif-condensed"
                            android:gravity="center"
                            android:text="S.S.C :"
                            android:textColor="#000000"
                            android:textColorHint="#000000"
                            android:textSize="18dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txtSscName"
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:layout_marginHorizontal="10dp"
                                android:fontFamily="sans-serif-condensed"
                                android:gravity="left|center"
                                android:paddingHorizontal="5dp"
                                android:textColor="#000000"
                                android:textColorHint="#000000"

                                android:textSize="15dp" />

                            <TextView
                                android:id="@+id/txtSscYear"
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:layout_marginHorizontal="10dp"
                                android:layout_marginVertical="3dp"

                                android:fontFamily="sans-serif-condensed"
                                android:gravity="left|center"
                                android:paddingHorizontal="5dp"
                                android:textColor="#000000"
                                android:textColorHint="#000000"

                                android:textSize="15dp" />

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginVertical="5dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="10dp"
                            android:fontFamily="sans-serif-condensed"
                            android:gravity="center"
                            android:text="H.S.C :"
                            android:textColor="#000000"
                            android:textColorHint="#000000"
                            android:textSize="18dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txtHscName"
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:layout_marginHorizontal="10dp"

                                android:fontFamily="sans-serif-condensed"
                                android:gravity="left|center"
                                android:paddingHorizontal="5dp"
                                android:textColor="#000000"
                                android:textColorHint="#000000"

                                android:textSize="15dp" />

                            <TextView
                                android:id="@+id/txtHscYear"
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:layout_marginHorizontal="10dp"
                                android:layout_marginVertical="3dp"
                                android:fontFamily="sans-serif-condensed"
                                android:gravity="left|center"
                                android:paddingHorizontal="5dp"
                                android:textColor="#000000"
                                android:textColorHint="#000000"

                                android:textSize="15dp" />

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginVertical="5dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="10dp"
                            android:fontFamily="sans-serif-condensed"
                            android:gravity="center"
                            android:text="GRADUATION :"
                            android:textColor="#000000"
                            android:textColorHint="#000000"
                            android:textSize="18dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txtGradName"
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:layout_marginHorizontal="10dp"
                                android:fontFamily="sans-serif-condensed"
                                android:gravity="left|center"
                                android:paddingHorizontal="5dp"
                                android:textColor="#000000"
                                android:textColorHint="#000000"

                                android:textSize="15dp" />

                            <TextView
                                android:id="@+id/txtClgYear"
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:layout_marginHorizontal="10dp"
                                android:layout_marginVertical="3dp"
                                android:fontFamily="sans-serif-condensed"
                                android:gravity="left|center"
                                android:paddingHorizontal="5dp"
                                android:textColor="#000000"
                                android:textColorHint="#000000"

                                android:textSize="15dp" />

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="2dp"
                    android:layout_height="291dp"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="5dp"
                    android:background="#E8000000" />

                <LinearLayout
                    android:layout_width="@dimen/_140sdp"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:layout_marginTop="10dp"
                    android:background="#3C393939"
                    android:orientation="vertical">


                    <TextView

                        android:layout_width="118dp"
                        android:layout_height="31dp"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginVertical="10dp"


                        android:clickable="true"
                        android:focusable="true"
                        android:fontFamily="@font/krona_one"
                        android:gravity="center"
                        android:hint="HOBBIES"
                        android:textColor="#E8000000"
                        android:textColorHint="#E8000000"
                        android:textSize="@dimen/_10sdp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginVertical="5dp">

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="10dp"
                            android:src="@drawable/dot" />

                        <TextView
                            android:id="@+id/txtHobbies"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:fontFamily="sans-serif-condensed"
                            android:gravity="center|left"
                            android:hint=" "
                            android:textColor="#000000"
                            android:textColorHint="#000000"
                            android:textSize="15dp" />


                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="10dp"
                android:background="#3C393939"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/txtSkill"
                    android:layout_width="130dp"
                    android:layout_height="31dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"


                    android:clickable="true"
                    android:focusable="true"
                    android:fontFamily="@font/krona_one"
                    android:gravity="center"
                    android:hint="SKILL's"
                    android:textColor="#E8000000"
                    android:textColorHint="#E8000000"
                    android:textSize="@dimen/_10sdp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="5dp">

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="10dp"
                        android:src="@drawable/dot" />

                    <TextView
                        android:id="@+id/txtSkills"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:fontFamily="sans-serif-condensed"
                        android:gravity="center|left"
                        android:hint=" "
                        android:textColor="#000000"
                        android:textColorHint="#000000"
                        android:textSize="15dp" />


                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>